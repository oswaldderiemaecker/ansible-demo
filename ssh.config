Host *
    #disable host key checking: avoid asking for the keyprint authenticity
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    #enable hashing known_host file
    HashKnownHosts yes
    #IdentityFile allows to specify exactly which private key I wish to use for authentification
    IdentityFile ../docker-ansible-env/id_rsa_ansible

Host webserver.dev.local
    HostName localhost
    User root
    Port 2224
Host database.dev.local
    HostName localhost
    User root
    Port 2225
Host webserver.staging.local
    HostName localhost
    User root
    Port 2226
Host database.staging.local
    HostName localhost
    User root
    Port 2227
Host webserver.production.local
    HostName localhost
    User root
    Port 2228
Host database.production.local
    HostName localhost
    User root
    Port 2229